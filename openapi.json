{
  "openapi": "3.0.1",
  "info": {
    "title": "SOLBEAR GPT API",
    "description": "API for interacting with $SOLBEAR GPT bot",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://solbear-gpt-api.onrender.com"
    }
  ],
  "paths": {
    "/gpt": {
      "post": {
        "operationId": "sendMessageToGPT",
        "summary": "Send a message to the SOLBEAR GPT bot",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  }
                },
                "required": ["message"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
